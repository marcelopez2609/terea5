void setup() {
   size(1000, 770, OPENGL );
}

void draw() {
  background(0);
   camera(320, mouseY, mouseX, width/2, width/2, 0, 0, 1, 0  );
  //camera(320, mouseX , mouseY , width/2, height/2, 0, 0, 1, 0  );
 translate(width/2, height/2, -100   );
 stroke(250);
  //rotateX(mouseY * 0.005);
 //rotateY(mouseX * 0.005);
  noFill();
 // sphereDetail(mouseX );
  sphere(200);
  fill(180,50,55);
  box(100);
}
